{
  "name": "synchronize-tab-scrolling",
  "version": "2.0.0",
  "private": true,
  "description": "여러 탭을 선택하고 스크롤 위치를 동기화할 수 있습니다.",
  "author": "jaem1n207",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jaem1n207/synchronize-tab-scrolling.git"
  },
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "bun esbuild.config.js && vite build",
    "build:watch": "bun esbuild.config.js && __DEV__=true vite build -w",
    "preview": "vite preview",
    "test": "npm run test:integration && npm run test:unit",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "test:integration": "playwright test",
    "test:unit": "vitest"
  },
  "devDependencies": {
    "@playwright/test": "^1.28.1",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@tailwindcss/typography": "^0.5.10",
    "@types/bun": "^1.0.1",
    "@types/chrome": "^0.0.256",
    "@types/eslint": "8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "autoprefixer": "^10.4.17",
    "cssnano": "^6.0.3",
    "esbuild": "^0.19.11",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.35.1",
    "postcss": "^8.4.33",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "svelte": "^4.2.7",
    "svelte-check": "^3.6.0",
    "sveltekit-adapter-chrome-extension": "^2.0.0",
    "tailwindcss": "^3.4.1",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "vite": "^5.0.3",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "bits-ui": "^0.14.0",
    "clsx": "^2.1.0",
    "lucide-svelte": "^0.312.0",
    "mode-watcher": "^0.1.2",
    "tailwind-merge": "^2.2.0",
    "tailwind-variants": "^0.1.20"
  }
}
