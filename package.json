{
  "name": "synchronize-tab-scrolling",
  "version": "2.3.2",
  "private": true,
  "description": "Synchronize scroll positions across browser tabs - Perfect for comparing documents, reviewing code changes, or analyzing data side by side.",
  "author": "bendd <tech.jmtt@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jaem1n207/synchronize-tab-scrolling.git"
  },
  "bugs": {
    "url": "https://github.com/jaem1n207/synchronize-tab-scrolling/issues"
  },
  "homepage": "https://github.com/jaem1n207/synchronize-tab-scrolling#readme",
  "keywords": [
    "sync",
    "scroll",
    "scroll-sync",
    "tab-sync",
    "productivity-tool",
    "synchronized-tabs",
    "scroll-synchronization"
  ],
  "type": "module",
  "scripts": {
    "--------------------------------dev-----------------------------": "",
    "dev": "pnpm run clear && cross-env NODE_ENV=development run-p dev:*",
    "dev-firefox": "pnpm run clear && cross-env NODE_ENV=development EXTENSION=firefox run-p dev:*",
    "dev:prepare": "esno scripts/prepare.ts",
    "dev:background": "pnpm run build:background -- --mode development",
    "dev:web": "vite",
    "dev:js": "pnpm run build:js -- --mode development",
    "--------------------------------prod-----------------------------": "",
    "build": "cross-env NODE_ENV=production run-s clear build:web build:prepare build:background build:js",
    "build:prepare": "esno scripts/prepare.ts",
    "build:background": "vite build --config vite.config.background.mts",
    "build:web": "vite build",
    "build:js": "vite build --config vite.config.content.mts",
    "--------------------------------release-----------------------------": "",
    "pack": "cross-env NODE_ENV=production run-p pack:*",
    "pack:zip": "rimraf extension.zip && jszip-cli add extension/* -o ./extension.zip",
    "pack:crx": "crx pack extension -o ./extension.crx",
    "pack:xpi": "cross-env WEB_EXT_ARTIFACTS_DIR=./ web-ext build --source-dir ./extension --filename extension.xpi --overwrite-dest",
    "--------------------------------ship-----------------------------": "",
    "start:chromium": "web-ext run --source-dir ./extension --target=chromium",
    "start:firefox": "web-ext run --source-dir ./extension --target=firefox-desktop",
    "--------------------------------test-----------------------------": "",
    "test": "vitest test",
    "test:e2e": "playwright test",
    "--------------------------------tools-----------------------------": "",
    "clear": "rimraf --glob extension/dist extension/manifest.json extension.*",
    "clean": "find . -type f -name 'vite.config.*.timestamp-*' -ls -delete 2>/dev/null",
    "health": "lefthook run health",
    "lint:fix": "pnpm eslint --fix .",
    "format:fix": "pnpm prettier --write .",
    "typecheck": "pnpm tsc --noEmit",
    "cz": "czg"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@ffflorian/jszip-cli": "^3.8.2",
    "@iconify/json": "^2.2.282",
    "@playwright/test": "^1.49.1",
    "@types/eslint__js": "^8.42.3",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.2",
    "@types/webextension-polyfill": "^0.12.1",
    "@unocss/reset": "^0.65.1",
    "@vitejs/plugin-react": "^4.3.4",
    "chokidar": "^4.0.1",
    "cross-env": "^7.0.3",
    "crx": "^5.0.1",
    "czg": "^1.11.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "esno": "^4.8.0",
    "fs-extra": "^11.2.0",
    "jsdom": "^25.0.1",
    "kolorist": "^1.8.0",
    "lefthook": "^1.9.2",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.0",
    "unocss": "^0.65.1",
    "unocss-preset-animations": "^1.1.0",
    "unocss-preset-shadcn": "^0.3.1",
    "unplugin-auto-import": "^0.19.0",
    "unplugin-icons": "^0.21.0",
    "vite": "^6.0.3",
    "vitest": "^2.1.8",
    "web-ext": "^8.3.0",
    "webext-bridge": "^6.0.1",
    "webextension-polyfill": "^0.12.0"
  }
}
